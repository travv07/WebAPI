
<div class="header">
		<div class="content-header">
			<div class="icon1">
				<div class="image-title">
					<%= link_to image_tag("iconshop.png", :alt => "icon"), root_path %>
				</div>
				<div class="title-header">
					<h3><%= link_to "Shop Clothes", root_path %>
				</div>
			</div>
			<div class="search">
				<div class="form-group12">
					<input type="text" name="search" id="search" class="form-control input-lg valuesearch" placeholder="Search" tabindex="3">
				</div>
		    </div>
			<div class="menu">
				<ul class="menu1">
					<li>
					<% if session[:user].present? %>
						<div class="dropdown">
							<%= image_tag( "tra.jpg", :alt => "icon", :class => "header-icon1 js-show-header-dropdown dropdown-toggle avt" ,data: { toggle: 'dropdown' } ) %>
						    <ul class="dropdown-menu">
						      <li><%= link_to "Infor", user_profile_path %></li>
						      <li><%= link_to "Log out", logout_path, method: :delete %></li>
						    </ul>
						</div>
					<% else %>
						<div class="dropdown">
							<%= image_tag("icon-header-01.png", :alt => "icon", :class => "header-icon1 js-show-header-dropdown dropdown-toggle" ,data: { toggle: 'dropdown' } ) %>
						    <ul class="dropdown-menu">
						      <li><%= link_to "Sign in", login_path %></li>
						      <li><%= link_to "Sign up", new_user_path %></li>
						    </ul>
						</div>
					<%end%>
					</li>
					<li>
						<%= image_tag("icon-header-02.png") %>
					</li>
				</ul>	
			</div>
		</div>
	</div>
	<script type="text/javascript">
		$(document).ready(function(){
			$('.search').on('keyup',function(){
				var value = $('.valuesearch').val();
				$.get('',{value : value},function(data){
					$('.khungsanpham').html(data);
				})
			});
		});

	</script>	